{
  "name": "evm-scaffolding-cli",
  "version": "1.0.93",
  "description": "A CLI frontend repo for EVM scaffolding that allows users to choose dependencies to install and modifies scripts based on user input.",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest tests/index.test.js",
    "lint": "pnpm rome check src --apply",
    "lintCheck": "pnpm rome check src",
    "format": "pnpm rome format src --write",
    "version": "git push",
    "prepublish": "pnpm tsc",
    "publish": "pnpm tsc && pnpm version patch -f && npm publish --no-git-tag-version"
  },
  "bin": {
    "evm-scaffolding-cli": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seranged/evm-scaffolding-cli.git"
  },
  "keywords": [
    "EVM",
    "scaffolding",
    "CLI",
    "dependencies",
    "scripts"
  ],
  "author": "Seranged",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seranged/evm-scaffolding-cli/issues"
  },
  "homepage": "https://github.com/seranged/evm-scaffolding-cli#readme",
  "dependencies": {
    "@types/inquirer": "^9.0.3",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.21",
    "ora": "^6.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rome": "^12.1.3",
    "sinon": "^15.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.196",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.8",
    "@types/react": "^18.2.18",
    "@types/sinon": "^10.0.16",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "ncp": "^2.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  }
}
